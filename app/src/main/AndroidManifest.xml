<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.nikunjsingh.Tripongo" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/tripicon"
        android:label="Tripongo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/app_name" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Welcome" >
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".budget"
            android:label="@string/title_activity_budget" >
        </activity>
        <activity
            android:name=".Interest"
            android:label="@string/title_activity_interest" >
        </activity>
        <activity
            android:name=".Fetch"
            android:label="@string/title_activity_fetch" >
        </activity>
        <activity
            android:name=".Listview"
            android:label="@string/title_activity_listview" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Checklist"
            android:label="@string/app_name" >
        </activity>

        <service android:name=".RssService" />
        <service android:name=".RssService1" />
        <service android:name=".RssService2" />

        <activity
            android:name=".Webview"
            android:label="@string/title_activity_webview" >
        </activity>
        <activity
            android:name=".Options"
            android:label="@string/title_activity_options" >
        </activity>
    </application>

</manifest>
