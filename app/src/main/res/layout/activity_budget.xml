<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nikunjsingh.Tripongo.budget"
    android:id="@+id/bl">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Trip Information"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/datePicker"
        android:layout_marginStart="63dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/Next"
        android:onClick="sendMessage"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="#c9cfff"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a Destination"
        android:id="@+id/textView6"
        android:layout_below="@+id/Next"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Mumbai"
        android:id="@+id/mumbai"
        android:maxHeight="5dp"
        android:onClick="mumbaiLike"
        android:layout_marginTop="47dp"
        android:background="@drawable/mybutton"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Delhi"
        android:id="@+id/delhi"
        android:maxHeight="5dp"
        android:onClick="delhiLike"
        android:layout_above="@+id/datePicker"
        android:layout_centerHorizontal="true"
        android:background="@drawable/mybutton"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Goa"
        android:id="@+id/goa"
        android:maxHeight="5dp"
        android:onClick="goaLike"
        android:layout_above="@+id/datePicker"
        android:layout_alignStart="@+id/Next"
        android:background="@drawable/mybutton"/>

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/mumbai"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Date"
        android:id="@+id/savedate"
        android:layout_alignBottom="@+id/datePicker"
        android:layout_centerHorizontal="true"
        android:background="@drawable/mybutton" />


</RelativeLayout>
