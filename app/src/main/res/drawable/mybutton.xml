<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />

            <gradient android:angle="-90" android:startColor="@color/button_darkwhite" android:endColor="@color/button_darkwhite"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />

            <solid android:color="#e1e0e2"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />

            <gradient android:angle="-90" android:startColor="@color/button_white" android:endColor="@color/button_white" />
        </shape>
    </item>
</selector>